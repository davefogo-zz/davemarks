<h1 class="jumbotron">All Blocmarks</h1>
<br>
<p class="pull-right">
  <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
</p>
<br>
<br>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h3 class="media-heading">
              <p>
                <%= link_to topic.title, topic %>
              </p>
                <br>
                <p class="pull-right">
                  <% if current_user == topic.user%>
                    <%= link_to "Edit", edit_topic_path(topic), class: 'btn btn-primary' %>
                    <%= link_to "Delete", topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic along with all the bookmarks?'} %>
                  <% end %>
                </p>

              <small>
                <%= render partial: 'bookmarks/bookmark', locals: {topic: topic} %>
              </small>
              <br>
          </div>
        </h3>
      </div>
    <% end %>
  </div>
</div>
