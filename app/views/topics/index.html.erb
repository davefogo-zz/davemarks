<h1 class="jumbotron">All Blocmark Topics
  <p class="pull-right">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </p>
</h1>
<div class="container">
  <div class="row">

      <% @topics.each_slice(3) do |topics| %>
        <p>
          <% topics.each do |topic| %>
          <div class="col-sm-4">
            <h4><%= link_to topic.title, topic %></h4>
              <small>
                <% if current_user == topic.user%>
                  <%= link_to "Edit", edit_topic_path(topic)%> |
                  <%= link_to "Delete", topic, method: :delete, data: {confirm: 'Are you sure you want to delete this topic along with all the bookmarks?'} %>
                <% end %>
              </small>
          </div>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
  <br>
<p>
  <%= render partial: 'bookmarks/bookmark_import'%>
</p>
