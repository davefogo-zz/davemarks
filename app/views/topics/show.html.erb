<h1><%= @topic.title %></h1>
<%= link_to "New Bookmark", new_topic_bookmark_path(@topic) %>
<br>
<br>
<div class="row">
  <div class="col-md-8">
    <%= render partial: 'bookmarks/bookmark', locals: {topic: @topic} %>
  </div>
</div>
<br>
<%= link_to "Edit", edit_topic_path, class: 'btn btn-success' %>
<%= link_to "Destroy", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic along with all the bookmarks?'} %>
