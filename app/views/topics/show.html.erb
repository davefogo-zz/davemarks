<h1 class="jumbotron"><%= @topic.title %></h1>
  <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-default' %>
<p class="pull-right">
  <% if current_user == @topic.user%>
    <%= link_to "Edit", edit_topic_path, class: 'btn btn-primary' %>
    <%= link_to "Destroy", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic along with all the bookmarks?'} %>
  <% end %>
</p>
<br>
<br>
<div class="row">
  <div class="col-md-8">
    <%= render partial: 'bookmarks/user_bookmarks', locals: {topic: @topic, bookmark: @topic.bookmarks} %>
  </div>
</div>
<br>
